{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üöÄ Hono API Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/api/src/server.ts",
      "runtimeArgs": ["--loader", "tsx/esm"],
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      },
      "cwd": "${workspaceFolder}/packages/api",
      "console": "integratedTerminal",
      "restart": true,
      "runtimeExecutable": "node"
    },
    {
      "name": "‚ö° PayloadCMS (Next.js)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/cms/node_modules/next/dist/bin/next",
      "args": ["dev"],
      "runtimeArgs": ["--inspect"],
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development",
        "NODE_OPTIONS": "--no-deprecation"
      },
      "cwd": "${workspaceFolder}/packages/cms",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "action": "debugWithChrome",
        "killOnServerStop": true,
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}/packages/cms"
      }
    },
    {
      "name": "üîÑ Full Stack (API + CMS)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/pnpm",
      "args": ["dev"],
      "runtimeArgs": ["--inspect"],
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "üóÑÔ∏è Database Studio",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/pnpm",
      "args": ["db:studio"],
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "üöÄ Launch All Services",
      "configurations": ["üöÄ Hono API Server", "‚ö° PayloadCMS (Next.js)"],
      "stopAll": true
    }
  ]
}
