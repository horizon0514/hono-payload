{
  "name": "@hono-payload/db",
  "version": "1.0.0",
  "description": "Database schemas, connections and types",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./db": {
      "types": "./dist/db/index.d.ts",
      "import": "./dist/db/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "with-env": "dotenv -e ../../.env --",
    "db:generate": "bun run with-env drizzle-kit generate",
    "db:migrate": "bun run with-env drizzle-kit migrate",
    "db:push": "bun run with-env drizzle-kit push",
    "db:studio": "bun run with-env drizzle-kit studio",
    "seed": "bun run with-env tsx src/seed.ts",
    "lint": "biome check .",
    "format": "biome format --write ."
  },
  "dependencies": {
    "drizzle-orm": "0.44.2",
    "postgres": "^3.4.4",
    "@t3-oss/env-core": "^0.12.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "drizzle-kit": "^0.31.2",
    "typescript": "5.7.3",
    "dotenv-cli": "^7.4.2"
  }
}
