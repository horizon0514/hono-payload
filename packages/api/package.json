{
  "name": "@hono-payload/api",
  "version": "1.0.0",
  "description": "Hono API server",
  "type": "module",
  "main": "./dist/server.js",
  "scripts": {
    "build": "tsc",
    "with-env": "dotenv -e ../../.env --",
    "dev": "bun run with-env tsx --watch src/server.ts",
    "start": "bun run with-env node dist/server.js",
    "lint": "biome check .",
    "format": "biome format --write ."
  },
  "dependencies": {
    "@hono-payload/db": "workspace:*",
    "hono": "^4.6.8",
    "@hono/node-server": "^1.13.7",
    "cors": "^2.8.5",
    "drizzle-orm": "0.44.2",
    "@t3-oss/env-core": "^0.12.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@vercel/node": "^3.2.19",
    "tsx": "^4.19.2",
    "typescript": "5.7.3",
    "dotenv-cli": "^7.4.2"
  }
}
