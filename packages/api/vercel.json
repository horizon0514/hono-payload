{
  "buildCommand": "bun run build:db && bun run build:api",
  "installCommand": "bun install",
  "functions": {
    "api/index.ts": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index.ts"
    }
  ],
  "env": {
    "DATABASE_URI": "@database_uri"
  }
}
